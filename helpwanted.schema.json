{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/helpwanted/helpwanted/master/helpwanted.schema.json",
  "type": "object",
  "properties": {
    "version": {
      "id": "/version",
      "type": "string"
    },
    "technologies": {
      "id": "/technologies",
      "type": "object",
      "additionalProperties": {
        "type": "string"
      }
    },
    "skills": {
      "id": "/skills",
      "type": "array",
      "items": { "type": "string" }
    },
    "needs": {
      "id": "/needs",
      "type": "array",
      "items": { "type": "string" }
    },
    "resources": {
      "id": "/resources",
      "type": "object",
      "required": [
        "people", "repository"
      ],
      "properties": {
        "people": {
          "id": "/resources/people",
          "type": "array",
          "items": {
            "id": "/resources/people/person",
            "type": "object",
            "required": [
              "name", "email"
            ],
            "properties": {
              "name": {
                "id": "/resources/people/person/name",
                "type": "string"
              },
              "email": {
                "id": "/resources/people/person/email",
                "type": "string"
              },
              "description": {
                "id": "/resources/people/person/description",
                "type": "string"
              }
            },
            "additionalProperties": {
              "type": "string"
            }
          }
        },
        "bugs": {
          "id": "/resources/bugs",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "mailinglist": {
          "id": "/resources/mailinglist",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "security": {
          "id": "/resources/security",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "repository": {
          "id": "/resources/repository",
          "type": "string"
        },
        "homepage": {
          "id": "/resources/homepage",
          "type": "string"
        }
      }
    }
  },
  "required": [
    "technologies",
    "skills",
    "resources"
  ]
}
